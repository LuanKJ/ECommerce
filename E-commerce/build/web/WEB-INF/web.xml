<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>FilterProduto</filter-name>
        <filter-class>br.com.controller.FilterProduto</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>FilterProduto</filter-name>
        <servlet-name>ServletProdutoSalvar</servlet-name>
    </filter-mapping>
    <servlet>
        <servlet-name>ServletLogin</servlet-name>
        <servlet-class>br.com.app.ServletLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletPedido</servlet-name>
        <servlet-class>br.com.app.ServletPedido</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletProdutoList</servlet-name>
        <servlet-class>br.com.app.ServletProdutoList</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletProduto</servlet-name>
        <servlet-class>br.com.app.ServletProduto</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletProdutoSalvar</servlet-name>
        <servlet-class>br.com.app.ServletProdutoSalvar</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletLogin</servlet-name>
        <url-pattern>/ServletLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletPedido</servlet-name>
        <url-pattern>/ServletPedido</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletProdutoList</servlet-name>
        <url-pattern>/ServletProdutoList</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletProduto</servlet-name>
        <url-pattern>/ServletProduto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletProdutoSalvar</servlet-name>
        <url-pattern>/ServletProdutoSalvar</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
